org: "{{ ORG_NAME }}"
instanceID: "{{ PROJECT_ID }}-{{ PROJECT_NUMBER }}"

connectAgent:
  serviceAccountPath: "{{ SERVICE_ACCOUNT_PATH_CONNECT_AGENT }}"

watcher:
  serviceAccountPath: "{{ SERVICE_ACCOUNT_PATH_WATCHER }}"

k8sCluster:
  name: "{{ CLUSTER_NAME }}"
  region: "{{GCP_REGION }}"

gcp:
  projectID: "{{ PROJECT_ID }}"
  name: "{{ CLUSTER_NAME }}"
  region: "{{GCP_REGION }}"

virtualhosts:
- name: default
  sslCertPath: "{{ SSL_CERT_PATH }}"
  sslKeyPath: "{{ SSL_KEY_PATH }}"

envs:
- name: test1
  serviceAccountPaths:
    synchronizer: "{{ SERVICE_ACCOUNT_PATH_SYNCHRONIZER }}"
    udca: "{{ SERVICE_ACCOUNT_PATH_UDCA }}"

mart:
  replicaCountMin: 1
  replicaCountMax: 1
  resources:
    requests:
      cpu: 250m
      memory: 256Mi
  serviceAccountPath: "{{ SERVICE_ACCOUNT_PATH_MART }}"

synchronizer:
  replicaCountMin: 1
  replicaCountMax: 1
  resources:
    requests:
      cpu: 100m
      memory: 256Mi

runtime:
  replicaCountMin: 1
  replicaCountMax: 1
  resources:
    requests:
      cpu: 250m
      memory: 256Mi

udca:
  replicaCountMin: 1
  replicaCountMax: 1
  resources:
    requests:
      cpu: 100m
      memory: 256Mi
  fluentd:
    resources:
      limits:
        memory: 128Mi
      requests:
        cpu: 100m
        memory: 128Mi

metrics:
  enabled: false
  serviceAccountPath: "{{ SERVICE_ACCOUNT_PATH_METRICS }}"