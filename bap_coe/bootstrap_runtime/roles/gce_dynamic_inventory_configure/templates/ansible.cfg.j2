[defaults]
inventory = inventory
fact_caching_connection = ~/.ansible/cache/{{ PROJECT_ID }}
log_path = ~/.ansible/logs/{{ PROJECT_ID }}.log
private_key_file = ~/.ssh/google_compute_engine
roles_path = ./roles:../../roles:~/.ansible/roles
local_tmp = ~/.ansible/tmp
library = ~/.ansible/library
remote_user = {{ GCLOUD_ACCOUNT_USER }}
host_key_checking = False
forks = 25
retry_files_enabled = False
ansible_shell_type=sh
gathering = smart
fact_caching = jsonfile
module_name = shell
merge_multiple_cli_tags=True
display_args_to_stdout = True
timeout = 60
callback_whitelist = timer,profile_roles,profile_tasks
bin_ansible_callbacks = True
stdout_callback = yaml
stderr_callback = yaml
#strategy_plugins = ~/.ansible/plugins/mitogen-0.2.8/ansible_mitogen/plugins/strategy
#strategy = mitogen_linear
#bin_ansible_callbacks = True
#stdout_callback = yaml
#stderr_callback = yaml
#enable_task_debugger = False
#ansible_python_interpreter = /home/friasc/.pyenv/versions/abm/bin/python

[ssh_connection]
# Sample ssh_args settings
